 
 {{#if isAdmin}}
  <div id="chai-name-container">

    {{#each chai}}

    <div class="card">
      {{!-- <img src="..." class="card-img-top" alt="..."> --}}
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
      </div>
      <div class="card-body">
        <button data-delBtn_id="{{this.id}}" class="deleteBtn btn btn-outline-danger" type="button">Удалить</button>
      </div>
    </div>

    {{/each}}

  </div>

  {{else}}

 <h2 style="text-align: center;"><i>Личный кабинет администратора</i></h2>
<div class="profile-container">
 <form name="add-article" class="items-form" action="/add-article" method="POST"
        <div class="form-row" style="margin-left: 30%; margin-bottom: 5%;">
          <div class="form-group col-md-6">
            <label for="inputItem">Название</label>
            <input type="text" name="itemname" class="form-control" id="inputItem" />
          </div>
          <div class="form-group col-md-6">
            <label for="location">Место культивации</label>
            <select id="selectCond" name="itemcondition" class="form-control">
              <option selected>Choose...</option>
              <option value="bad">Bad</option>
              <option value="good">Good</option>
              <option value="excellent">Excellent</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputStartAt">Фото</label>
            <input type="date" name="startat" class="form-control" id="inputStartAt" />
          </div>
          <div class="form-group col-md-6">
            <label for="inputEndAt">Описание</label>
            <input type="date" name="endat" class="form-control" id="inputEndAt" />
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Добавить чай на карту</button>
      </form>

